{% extends 'base.html.twig' %}

{% block title %}
   {{ book.titre }}
{% endblock %}

{% block body %}
<div class="d-flex flex-wrap">
    <div class="col-12 col-md-3 col-lg-2">  
        <a href="{{asset('images/books/' ~ book.imageName) }}"data-lighbox="{{ book.titre }}">
        <img src="{{asset('images/books/' ~ book.imageName) }}" alt="{{ book.titre }}" class="img-fluid">
        </a>
    </div>
    <div class="col-12 col-md-9 col-lg-10">
        <h1>{{ book.titre }}</h1>
        <div> Auteur : <a href="{{path('app_front_author_show', { slug: book.author.slug}) }}">{{ book.author.displayName }}</a></div>
            {% if book.description is not null %}
            {{ book.description|raw }}
            {% endif %}
    </div>
</div>
{% endblock %}